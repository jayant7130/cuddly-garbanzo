#include <stdio.h>
int factorial (int x);
int main(){
int number;
    printf("enter the value of number\n");
    scanf("%d", &number);
    printf("the factorial of the given number is %d",factorial(number));
    
    return 0;
}
int factorial(int x){
    if (x==1||x==0){
    return 1;
    }
else{
    return x * factorial(x-1);
}
}
